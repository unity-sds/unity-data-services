{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DelegateS3Access",
            "Effect": "Allow",
            "Principal": {
                "Service": "s3.amazonaws.com",
                "AWS": [
                    "arn:aws:iam::${udsAwsAccount}:role/${cumulus_lambda_processing_role_name}",
                    "arn:aws:iam::${udsAwsAccount}:role/${cumulus_sf_lambda_role_name}"
                ]
            },
            "Action": [
                "s3:ListBucket",
                "s3:GetObject*",
                "s3:PutObject*"
            ],
            "Resource": [
                "arn:aws:s3:::${s3BucketName}/*",
                "arn:aws:s3:::${s3BucketName}"
            ]
        }
    ]
}
